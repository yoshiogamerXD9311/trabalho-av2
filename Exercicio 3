processo=0
while processo < 2:
    n1 = int(input("Insira as Horas: "))
    if n1 == float:
        print("O numero deve ser inteiro.")
    n2 = int(input("Insira os Minutos: "))
    if n2 > 60:
            print("Erro")
    if n1 > 12:
        print(f'{n1 - 12}:{n2}' +  "pm")
    elif n1 < 12:
        print(f'{n1}:{n2}' + "am")    
    processo = int(input("Deseja continuar \n1 - sim \n2- nao: "))
